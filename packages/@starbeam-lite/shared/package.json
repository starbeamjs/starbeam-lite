{
  "name": "@starbeam-lite/shared",
  "type": "module",
  "version": "0.0.1",
  "exports": {
    ".": "./src/index.ts",
    "./kernel": "./src/kernel.ts"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./kernel": {
        "types": "./dist/kernel.d.ts",
        "default": "./dist/kernel.js"
      }
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite --clearScreen false",
    "docs": "typedoc",
    "lint": "eslint \"src/**/*.ts\"",
    "prepack": "pnpm build",
    "preview": "vite preview",
    "publish:local": "pnpm pack && cp *.tgz $LOCAL_TARGET",
    "test": "vitest --run"
  },
  "devDependencies": {
    "@starbeam-dev/eslint-plugin": "^1.0.4",
    "@workspace/build-utils": "workspace:^",
    "typescript": "^5.4.4",
    "vite": "^5.2.8",
    "vitest": "^1.4.0"
  },
  "files": [
    "dist",
    "src"
  ]
}
