{
  "name": "@starbeam-lite/core",
  "type": "module",
  "version": "0.0.1",
  "exports": {
    ".": "./src/index.ts",
    "./subtle": "./src/subtle.ts"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./subtle": {
        "types": "./dist/subtle.d.ts",
        "default": "./dist/subtle.js"
      }
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite --clearScreen false",
    "docs": "typedoc",
    "lint": "eslint \"src/**/*.ts\"",
    "prepack": "pnpm build",
    "preview": "vite preview",
    "publish:local": "pnpm pack && cp *.tgz $LOCAL_TARGET",
    "test": "vitest --run"
  },
  "dependencies": {
    "@starbeam-lite/shared": "workspace:~"
  },
  "devDependencies": {
    "@starbeam-dev/eslint-plugin": "^1.0.4",
    "@workspace/build-utils": "workspace:^",
    "@workspace/test-utils": "workspace:^",
    "typescript": "^5.4.4",
    "vite": "^5.2.8",
    "vitest": "^1.4.0"
  },
  "peerDependencies": {
    "@starbeam-lite/shared": "workspace:~"
  },
  "files": [
    "dist",
    "src"
  ],
  "peerDependenciesMeta": {
    "@starbeam-lite/shared": {
      "optional": true
    }
  }
}
